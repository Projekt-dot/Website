    <!-- Star Rating System -->
    <div id="star-rating">
      <span class="star" data-value="1">★</span>
      <span class="star" data-value="2">★</span>
      <span class="star" data-value="3">★</span>
      <span class="star" data-value="4">★</span>
      <span class="star" data-value="5">★</span>
    </div>

    <button id="submit-feedback" class="submit-btn" disabled>Dërgo Feedback</button>

    <!-- Button to view results -->
    
    </footer>
<script>
  // Initialize variables
  const stars = document.querySelectorAll('.star');
  let selectedRating = 0;

  // Update star selection
  stars.forEach(star => {
    star.addEventListener('click', () => {
      selectedRating = star.getAttribute('data-value');
      updateStarSelection(selectedRating);
    });
  });

  // Update the stars to reflect the selected rating
  function updateStarSelection(rating) {
    stars.forEach(star => {
      if (star.getAttribute('data-value') <= rating) {
        star.classList.add('selected');
      } else {
        star.classList.remove('selected');
      }
    });
    // Enable submit button
    document.getElementById('submit-feedback').disabled = false;
  }

  // Handle feedback submission
  document.getElementById('submit-feedback').addEventListener('click', () => {
    if (selectedRating > 0) {
      // Save feedback in local storage
      saveFeedback(selectedRating);
      // Disable submit button after submission
      document.getElementById('submit-feedback').disabled = true;
    }
  });

  // Save feedback to local storage
  function saveFeedback(rating) {
    let feedbacks = JSON.parse(localStorage.getItem('feedbacks')) || [];
    feedbacks.push(rating);
    localStorage.setItem('feedbacks', JSON.stringify(feedbacks));
    alert('Faleminderit për feedback!');
  }
</script>
</body>
